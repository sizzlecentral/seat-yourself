<h1>Sign Up</h1>

 <% if @user.errors.any? %>
	 <ul>
			 <% @user.errors.full_messages.each do |m| %>
			 <li><%= m %></li>
		 <% end %>
	 </ul>
 <% end %>

<%= form_for @user do |f| %>

	<div class='field'>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :phone %>
		<%= f.phone_field :phone %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>

		<%= f.submit 'Sign Up' %>

<% end %>
