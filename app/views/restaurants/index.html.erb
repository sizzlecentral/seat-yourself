<%= image_tag("restaurant-banner_smaller.jpg") %>

<% @restaurants.each do |restaurant| %>
	<ul>
    <div class="restaurant-card">
  		<li>
        <%= link_to image_tag("restaurant-banner_square.jpg"), restaurant_path(restaurant) %><br>
        <%= restaurant.name %><br>
  			<%= restaurant.neighbourhood %><br>
  			<%= restaurant.price_range %><br>
  			<%= link_to 'View Restaurant', restaurant_path(restaurant) %>
  		</li>
    </div>
	</ul>
<% end %>
